generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = "***"
}

model Client {
  id         String    @id @default(uuid())
  name       String
  document   String
  group      String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now()) @updatedAt

  @@map("clients")
}

model Veichle {
  id          String    @id @default(uuid())
  plate       String    @unique
  renavam     String    @unique
  brandModel  String
  type        String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now()) @updatedAt

  @@map("veichles")
}

model Crv {
  id         String    @id @default(uuid())
  clientId   String
  veichleId  String
  docType    String
  issuedOn   DateTime
  details    String?
  status     Boolean
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now()) @updatedAt

  client     Client  @relation("crv-client", fields: [clientId], references: [id])
  veichle    Veichle @relation("crv-veichle", fields: [veichleId], references: [id])
  
  @@map("crvs")
}