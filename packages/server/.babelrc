{
  "presets": [
    [
      "@babel/preset-env",
      { "targets": { "node": "current" } }
    ],
    "@babel/preset-typescript"
  ],
  "plugins": [
    ["babel-plugin-root-import", {
      "rootPathSuffix": "./dist/",
      "rootPathPrefix": "~/"
    }],
    ["@babel/plugin-proposal-decorators", {
      "legacy": true
    }],
    ["@babel/plugin-proposal-class-properties"]
  ]
}
