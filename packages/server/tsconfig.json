{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["ES6", "ESNext"],
    "allowJs": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/**/*.d.ts"
    ],
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"],
    }
  },
  "include": [
    "src/**/*"
  ]
}