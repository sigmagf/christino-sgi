{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": [ "ES6", "ESNext" ],
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/**/*.d.ts"
    ],
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"],
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}