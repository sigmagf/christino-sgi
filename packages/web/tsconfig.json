{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "typeRoots": [
      "./node_modules/@type",
      "./src/**/*.d.ts"
    ],
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "baseUrl": "./src",
    "module": "esnext"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "./node_modules/",
    "./__OBSOLETE__/"
  ]
}
